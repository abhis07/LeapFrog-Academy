<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @*top navbar*@
    <nav class="navbar navbar-default" id="topNav">
        <div class="container-fluid">
           
            <div class="row">
                <div class="col-md-3 col-sm-2 ">
                    @Html.ActionLink("Leapfrog Academy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
             
                <div class="col-md-6 col-sm-8">
                  


                </div>

                <div class="col-md-6 col-sm-2" style="margin-left:180px;">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
           
           
              
            
        </div>
    </nav>

    @*Main navigation bar*@
    <div class="navbar navbar-default" id="mainNav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
    <span class="icon-bar"></span>
</button>
@*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("All Categories", "Index", "categories")</li>
                    <li>@Html.ActionLink("Groups", "Index", "Groups")</li>
                    <li>@Html.ActionLink("Post", "Index", "Posts")</li>
                    <li>@Html.ActionLink("Topic", "Index", "Topics")</li>
                    <li>@Html.ActionLink("UserStatus", "Index", "UserStatus")</li>
                    <li>@Html.ActionLink("Status", "Index", "Status")</li>
                    <li>@Html.ActionLink("Users", "Index", "Users")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
